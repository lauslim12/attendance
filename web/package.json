{
  "name": "attendance-web",
  "version": "1.0.1",
  "description": "Front-end implementation of Attendance Application",
  "repository": "git@github.com/lauslim12/attendance.git",
  "author": "Nicholas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "circular-check": "dpdm --tree --circular --warning ./**/*.{ts,tsx}",
    "prettier-check": "prettier --check ./**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && next lint && yarn type-check"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.1.2",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/inter": "^4.5.10",
    "@fontsource/nunito": "^4.5.9",
    "axios": "^0.27.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^6.3.9",
    "next": "12.1.6",
    "next-safe": "^3.2.1",
    "nprogress": "^0.2.0",
    "qrcode.react": "^3.0.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-icons": "^4.4.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "17.0.39",
    "@types/nprogress": "^0.2.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "18.0.10",
    "dpdm": "^3.9.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "typescript": "4.7.2"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}
