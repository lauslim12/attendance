{
  "name": "attendance-api",
  "version": "1.0.0",
  "description": "Highly secure API for Attendance Application",
  "main": "dist/index.js",
  "repository": "git@github.com/lauslim12/attendance.git",
  "author": "Nicholas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "migrate": "yarn prisma migrate dev && yarn ts-node-dev cli/seed-data",
    "genkeys": "ts-node-dev cli/gen-keys",
    "reminder": "ts-node-dev cli/reminder",
    "collision-test": "ts-node-dev cli/collision-test",
    "otp-speed": "ts-node-dev cli/otp-speed",
    "match-totps": "ts-node-dev cli/match-totps",
    "dev": "ts-node-dev .",
    "start": "NODE_ENV=production node dist/index.js",
    "circular-check": "dpdm --tree --circular --warning ./**/*.ts",
    "prettier-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && yarn eslint-check && yarn type-check"
  },
  "dependencies": {
    "@prisma/client": "3.14.0",
    "argon2": "^0.28.5",
    "bullmq": "^1.84.0",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "device-detector-js": "^3.0.3",
    "dotenv": "^16.0.1",
    "env-var": "^7.1.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.4.0",
    "express-validation": "^4.1.0",
    "express-winston": "^4.2.0",
    "handy-redis": "^2.3.1",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^8.2.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jose": "^4.8.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "nodemailer": "^6.7.5",
    "otpauth": "^7.1.3",
    "pug": "^3.0.2",
    "rate-limit-redis": "^2.1.0",
    "redis": "3.1.2",
    "request-ip": "^2.1.3",
    "toobusy-js": "^0.5.1",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/express-slow-down": "^1.3.2",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^8.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/rate-limit-redis": "^1.7.4",
    "@types/request-ip": "^0.0.37",
    "@types/toobusy-js": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "dpdm": "^3.9.0",
    "eslint": "^8.16.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}
