{
  "name": "attendance-api",
  "version": "1.0.0",
  "description": "Highly secure API for Attendance",
  "main": "dist/index.js",
  "repository": "git@github.com/lauslim12/attendance.git",
  "author": "Nicholas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "migrate": "yarn prisma migrate dev && yarn ts-node-dev cli/seed-data",
    "genkeys": "ts-node-dev cli/gen-keys",
    "dev": "ts-node-dev .",
    "start": "NODE_ENV=production node dist/index.js",
    "circular-check": "dpdm --tree --circular --warning ./**/*.ts",
    "prettier-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && yarn eslint-check && yarn type-check"
  },
  "dependencies": {
    "@prisma/client": "3.7.0",
    "argon2": "^0.28.3",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "device-detector-js": "^3.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-rate-limit": "^5.5.1",
    "express-session": "^1.17.2",
    "express-slow-down": "^1.4.0",
    "express-validation": "^3.0.8",
    "handy-redis": "^2.3.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "html-to-text": "^8.1.0",
    "joi": "^17.5.0",
    "jose": "^4.3.7",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.30",
    "nodemailer": "^6.7.2",
    "otpauth": "^7.0.8",
    "pug": "^3.0.2",
    "rate-limit-redis": "^2.1.0",
    "redis": "3.1.2",
    "request-ip": "^2.1.3"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "^1.17.4",
    "@types/express-slow-down": "^1.3.2",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^8.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/rate-limit-redis": "^1.7.3",
    "@types/request-ip": "^0.0.37",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "dpdm": "^3.8.0",
    "eslint": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}
